{
    "files.watcherExclude": {
        "**/target": true
    },
    "cSpell.words": [
        "Alire",
        "ANTLR",
        "Bazel",
        "buildable",
        "Coursier",
        "inheritdoc",
        "Intelli",
        "Kiama",
        "multicore",
        "pchapin",
        "postcondition",
        "postconditions",
        "reimagined",
        "Scalameta",
        "subfolders",
        "subprojects",
        "venv",
        "Williston"
    ],
    "python.analysis.extraPaths": [
        "doc/sphinx-extensions"
    ],
    "xml.fileAssociations": [
        {
            "pattern": "*.xml",
            "systemId": "lib/docbookxi.rnc"
        }
    ],
    "xml.validation.enabled": true,
    "rewrap.wrappingColumn": 96,
    "todo-tree.filtering.includeGlobs": [
        "**/*.rst",
        "**/*.scala",
        "**/*.g4",
        "**/*.md",
        "**/*.txt",
        "**/*.cpp",
        "**/*.rs",
        "**/*.py",
        "**/*.xml"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|\\.\\.\\s+|;|/\\*|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
    "todo-tree.tree.scanMode": "workspace only"
}
