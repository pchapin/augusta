-- This file explores variations of the IF statement.

begin
   -- Basic IF
   if X + Y then
      A := B;
   end if;

   -- IF with ELSE
   if X + Y then
      A := B;
   else
      C := D;
   end if;

   -- IF with ELSIF and no ELSE
   if X + Y then
      A := B;
   elsif X + Y then
      C := D;
      E := F;
   end if;

   -- IF with ELSIF and ELSE
   if X + Y then
      A := B;
   elsif X + Y then
      C := D;
      null;
   else
      E := F;
   end if;

   -- IF with multiple ELSIF and no ELSE
   if X + Y then
      A := B;
   elsif X + Y then
      C := D;
   elsif X + Y then
      E := F;
      G := H;
   end if;

   -- IF with multiple ELSIF and ELSE
   if X + Y then
      X := B;
      C := D;
   elsif X + Y then
      E := F;
   elsif X + Y then
      G := H;
   else
      I := J;
   end if;
end
